{
  "name": "music-stats-client",
  "version": "0.0.0",
  "description": "the front-end",
  "main": "index.js",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint:scripts": "tslint ./src/**/*.ts",
    "lint:styles": "stylelint ./src/**/*.css",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "clean": "rm -rf ./dist/*",
    "precommit": "yarn lint",
    "prebuild:dev": "yarn clean",
    "prebuild:prod": "yarn clean",
    "run:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dashboard webpack-dev-server",
    "build:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack --progress --bail",
    "build:prod": "export NODE_ENV=production PUBLIC_PATH=https://oleksmarkh.github.io/music-stats/ && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/node": "^8.0.58",
    "autoprefixer": "^7.2.2",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "copy-webpack-plugin": "^4.2.3",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "gh-pages": "^1.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.9",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {

  }
}
