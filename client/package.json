{
  "name": "music-stats-client",
  "version": "0.0.0",
  "description": "the front-end",
  "main": "src/app.ts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint:scripts": "tslint ./src/{**,**/__tests__}/*.ts",
    "lint:styles": "stylelint ./src/**/*.scss",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "test": "NODE_PATH=./src jest",
    "clean": "rm -rf ./dist/*",
    "precommit": "yarn lint && yarn test",
    "prebuild:dev": "yarn clean",
    "prebuild:prod": "yarn clean",
    "run:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dev-server",
    "run:dev-dashboard": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dashboard webpack-dev-server",
    "build:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack --progress --bail",
    "build:prod": "export NODE_ENV=production PUBLIC_PATH=https://oleksmarkh.github.io/music-stats/ && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/d3-scale": "1.0.11",
    "@types/d3-scale-chromatic": "1.1.0",
    "@types/jest": "22.1.1",
    "@types/leaflet": "1.2.5",
    "@types/node": "9.4.0",
    "@types/ramda": "0.25.16",
    "autoprefixer": "7.2.5",
    "awesome-typescript-loader": "3.4.1",
    "babel-core": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "copy-webpack-plugin": "4.3.1",
    "css-loader": "0.28.9",
    "dotenv": "5.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "gh-pages": "1.1.0",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "22.1.4",
    "node-sass": "4.7.2",
    "postcss-loader": "2.1.0",
    "sass-loader": "6.0.6",
    "style-loader": "0.20.1",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "stylelint-order": "0.8.0",
    "stylelint-scss": "2.2.0",
    "stylelint-selector-bem-pattern": "2.0.0",
    "ts-jest": "22.0.2",
    "tslint": "5.9.1",
    "tslint-eslint-rules": "4.1.1",
    "tslint-loader": "3.5.3",
    "typescript": "2.7.1",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.1"
  },
  "dependencies": {
    "d3-scale": "2.0.0",
    "d3-scale-chromatic": "1.2.0",
    "geojson": "0.5.0",
    "leaflet": "1.3.1",
    "ramda": "0.25.0"
  }
}
