{
  "name": "music-stats-client",
  "version": "0.0.0",
  "description": "the front-end",
  "main": "src/app.ts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint:scripts": "tslint ./src/{**,**/__tests__}/*.ts",
    "lint:config": "tslint ./*.js",
    "lint:styles": "stylelint ./src/**/*.scss",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "test": "NODE_PATH=./src jest",
    "clean": "rm -rf ./dist/*",
    "prebuild:dev": "yarn clean",
    "prebuild:prod": "yarn clean",
    "run:dev": "set -o allexport && source .env-dev && webpack-dev-server",
    "build:dev": "set -o allexport && source .env-dev && webpack --progress --bail",
    "build:prod": "set -o allexport && source .env-prod && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/d3-color": "1.2.1",
    "@types/d3-scale": "2.0.2",
    "@types/d3-scale-chromatic": "1.3.0",
    "@types/jest": "23.3.9",
    "@types/leaflet": "1.2.12",
    "@types/node": "10.12.9",
    "@types/ramda": "0.26.0",
    "@types/webpack-env": "1.13.6",
    "autoprefixer": "9.3.1",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "copy-webpack-plugin": "4.6.0",
    "css-loader": "1.0.1",
    "dotenv": "6.1.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "2.0.0",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.1.4",
    "jest": "23.6.0",
    "node-sass": "4.10.0",
    "postcss-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "9.8.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "1.0.0",
    "stylelint-scss": "3.4.0",
    "stylelint-selector-bem-pattern": "2.0.0",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.1.6",
    "url-loader": "1.1.2",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10"
  },
  "dependencies": {
    "d3-color": "1.2.3",
    "d3-scale": "2.1.2",
    "d3-scale-chromatic": "1.3.3",
    "geojson": "0.5.0",
    "leaflet": "1.3.4",
    "ramda": "0.26.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  }
}
