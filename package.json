{
  "name": "music-stats-map",
  "version": "1.0.1",
  "description": "artists on a map",
  "main": "src/app.ts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/music-stats/map.git"
  },
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "lint:scripts": "tslint ./src/{**,**/__tests__}/*.ts",
    "lint:styles": "stylelint ./src/**/*.scss",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "test": "NODE_PATH=./src jest",
    "clean": "rm -rf ./dist/*",
    "prebuild:dev": "npm run clean",
    "prebuild:prod": "npm run clean",
    "dev": "set -o allexport && source .env-dev && webpack-dev-server",
    "build:dev": "set -o allexport && source .env-dev && webpack --progress --bail",
    "build:prod": "set -o allexport && source .env-prod && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/classnames": "2.2.9",
    "@types/d3-color": "1.2.2",
    "@types/d3-scale": "2.1.1",
    "@types/d3-scale-chromatic": "1.3.1",
    "@types/jest": "24.0.15",
    "@types/leaflet": "1.4.4",
    "@types/node": "12.0.12",
    "@types/ramda": "0.26.15",
    "@types/webpack-env": "1.13.9",
    "autoprefixer": "9.6.0",
    "awesome-typescript-loader": "5.2.1",
    "copy-webpack-plugin": "5.0.3",
    "css-loader": "3.0.0",
    "dotenv": "8.0.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "4.0.0",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "node-sass": "4.12.0",
    "npm-check": "5.9.0",
    "postcss-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-order": "3.0.0",
    "stylelint-scss": "3.9.0",
    "stylelint-selector-bem-pattern": "2.1.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.5.2",
    "url-loader": "2.0.1",
    "webpack": "4.35.2",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.5",
    "webpack-dev-server": "3.7.2"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "d3-color": "1.2.8",
    "d3-scale": "3.0.0",
    "d3-scale-chromatic": "1.3.3",
    "geojson": "0.5.0",
    "leaflet": "1.5.1",
    "ramda": "0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
