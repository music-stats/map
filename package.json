{
  "name": "music-stats-map",
  "version": "1.0.0",
  "description": "artists on a map",
  "main": "src/app.ts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "lint:scripts": "tslint ./src/{**,**/__tests__}/*.ts",
    "lint:config": "tslint ./*.js",
    "lint:styles": "stylelint ./src/**/*.scss",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "test": "NODE_PATH=./src jest",
    "clean": "rm -rf ./dist/*",
    "prebuild:dev": "yarn clean",
    "prebuild:prod": "yarn clean",
    "run:dev": "set -o allexport && source .env-dev && webpack-dev-server",
    "build:dev": "set -o allexport && source .env-dev && webpack --progress --bail",
    "build:prod": "set -o allexport && source .env-prod && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/classnames": "2.2.7",
    "@types/d3-color": "1.2.2",
    "@types/d3-scale": "2.1.1",
    "@types/d3-scale-chromatic": "1.3.1",
    "@types/jest": "24.0.11",
    "@types/leaflet": "1.4.0",
    "@types/node": "11.12.0",
    "@types/ramda": "0.26.5",
    "@types/webpack-env": "1.13.9",
    "autoprefixer": "9.5.0",
    "copy-webpack-plugin": "5.0.2",
    "css-loader": "2.1.1",
    "dotenv": "7.0.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "3.0.1",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "node-sass": "4.11.0",
    "npm-check": "5.9.0",
    "postcss-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "2.1.0",
    "stylelint-scss": "3.5.4",
    "stylelint-selector-bem-pattern": "2.0.0",
    "ts-jest": "24.0.0",
    "ts-loader": "5.3.3",
    "tslint": "5.14.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.2.4",
    "url-loader": "1.1.2",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.1.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "d3-color": "1.2.3",
    "d3-scale": "3.0.0",
    "d3-scale-chromatic": "1.3.3",
    "geojson": "0.5.0",
    "leaflet": "1.4.0",
    "ramda": "0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  }
}
