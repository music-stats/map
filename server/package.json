{
  "name": "music-stats-server",
  "version": "0.0.0",
  "description": "SHOULD become an API gateway between the front-end and various data providers, currently a set of scripts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint": "tslint ./src/**/*.ts",
    "clean:dist": "rm -rf ./dist/*",
    "clean:cache": "rm -rf ./cache/**/*.json",
    "prebuild": "yarn clean:dist",
    "build": "tsc",
    "build:watch": "tsc -w",
    "script:1-fetch-artists": "export NODE_PATH=./dist/ && node ./dist/src/scripts/1-fetch-artists",
    "script:2-fetch-artists-areas": "export NODE_PATH=./dist/ && node ./dist/src/scripts/2-fetch-artists-areas",
    "script:3-merge-artists": "export NODE_PATH=./dist/ && node ./dist/src/scripts/3-merge-artists"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "@types/node": "10.12.15",
    "@types/ramda": "0.26.0",
    "husky": "1.2.1",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.2.2"
  },
  "dependencies": {
    "axios": "0.18.0",
    "colors": "1.3.3",
    "dotenv": "6.2.0",
    "ramda": "0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
