{
  "name": "music-stats-server",
  "version": "0.0.0",
  "description": "an API gateway between the front-end and various data providers",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint": "tslint ./src/**/*.ts",
    "clean:dist": "rm -rf ./dist/*",
    "clean:cache": "rm -rf ./cache/**/*.json",
    "prebuild": "yarn clean:dist",
    "build": "tsc",
    "build:watch": "tsc -w",
    "script:fetch-artists": "export NODE_PATH=./dist/ && node ./dist/src/scripts/fetch-artists",
    "script:fetch-artists-areas": "export NODE_PATH=./dist/ && node ./dist/src/scripts/fetch-artists-areas",
    "script:merge-artists": "export NODE_PATH=./dist/ && node ./dist/src/scripts/merge-artists"
  },
  "devDependencies": {
    "@types/dotenv": "4.0.3",
    "@types/node": "10.12.2",
    "@types/ramda": "0.26.0",
    "husky": "1.1.3",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "axios": "0.18.0",
    "colors": "1.3.2",
    "dotenv": "6.1.0",
    "ramda": "0.25.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
