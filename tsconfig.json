{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "inlineSourceMap": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitHelpers": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths" : {
      "src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
